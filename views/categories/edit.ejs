<%- include("../partials/header") %>
    <div class="text-center">
        <h1>Edit <%=category.title%> Category's Name</h1>
    </div>
    <div class="m-4">
        <form action="/categories/<%= category._id %>?_method=PUT" method="POST" autocomplete="off">
            <div class="mb-3">
                <label class="form-label">Category Name:</label>
                <input type="text" name="title" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label" for="inputDeadline">Deadline:</label>
                <input type="datetime-local" name="dueDate" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Edit Category</button>
        </form>
    </div>
    <%- include("../partials/footer") %>